<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Productos</title>
</head>
<body>
    <h1>Listado de Productos</h1>

    <ul>
        {{#if productos.length}}
            {{#each productos}}
                <li>{{name}} - ${{price}} <button onclick="addToCart('{{_id}}')">Agregar</button></li>
            {{/each}}
        {{else}}
            <li>No hay productos disponibles.</li>
        {{/if}}
    </ul>

    <div>
        {{#if hasPrevPage}}
            <a href="{{prevLink}}">Anterior</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="{{nextLink}}">Siguiente</a>
        {{/if}}
    </div>

    <!-- Bienvenida y detalles del usuario -->
    <h1>Bienvenido</h1>
    <p>Usuario: {{user.username}}</p>
    <p>Rol: {{user.role}}</p>

    <script>
        function addToCart(productId) {
            alert(`Producto agregado al carrito: ${productId}`);
        }
    </script>
</body>
</html>

